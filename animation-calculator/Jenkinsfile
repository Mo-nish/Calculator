pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = "localhost:5000"
        IMAGE_NAME = "calculator-app"
        CONTAINER_NAME = "calculator-container"
        SONARQUBE = "Calculator"
    }

    stages {

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE}") {
                    withCredentials([string(credentialsId: 'sonarqube-token-calculator', variable: 'SONAR_TOKEN')]) {
                        bat '''
                        echo === Running SonarQube Analysis ===
                        sonar-scanner ^
                          -Dsonar.projectKey=Calculator ^
                          -Dsonar.sources=. ^
                          -Dsonar.host.url=http://localhost:9000 ^
                          -Dsonar.token=%SONAR_TOKEN%
                        '''
                    }
                }
            }
        }

        stage('Wait for SonarQube Processing') {
            steps {
                echo "‚è≥ Waiting 30 seconds for SonarQube to finish background analysis..."
                sleep(time: 30, unit: 'SECONDS')
            }
        }

        stage('Quality Gate Check') {
            steps {
                script {
                    try {
                        timeout(time: 10, unit: 'MINUTES') {
                            def qg = waitForQualityGate()
                            echo "Quality Gate Status: ${qg.status}"

                            if (qg.status != 'OK') {
                                error "‚ùå Quality Gate failed with status: ${qg.status}"
                            } else {
                                echo "‚úÖ Quality Gate passed successfully."
                            }
                        }
                    } catch (err) {
                        echo "‚ö†Ô∏è Quality Gate check skipped or timed out. Proceeding..."
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                bat '''
                echo === Running Unit Tests ===
                pytest --maxfail=1 --disable-warnings -q
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '''
                echo === Building Docker Image ===
                docker build -t %DOCKER_REGISTRY%/%IMAGE_NAME%:latest backend
                '''
            }
        }

        stage('Login to Nexus Registry') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-docker', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    bat '''
                    echo === Logging in to Nexus ===
                    docker login %DOCKER_REGISTRY% -u %USER% -p %PASS%
                    '''
                }
            }
        }

        stage('Push Image to Nexus') {
            steps {
                bat '''
                echo === Pushing Image to Nexus ===
                docker push %DOCKER_REGISTRY%/%IMAGE_NAME%:latest
                '''
            }
        }

        stage('Deploy Locally') {
            steps {
                bat '''
                echo === Deploying Docker Container ===
                docker stop %CONTAINER_NAME% || echo "No old container found"
                docker rm %CONTAINER_NAME% || echo "No old container to remove"
                docker pull %DOCKER_REGISTRY%/%IMAGE_NAME%:latest
                docker run -d --name %CONTAINER_NAME% -p 8082:5000 %DOCKER_REGISTRY%/%IMAGE_NAME%:latest
                '''
            }
        }
    }

    post {
        success {
            echo "üöÄ Deployment Successful! App available at: http://localhost:8082"
        }
        failure {
            echo "‚ùå Build or Deployment Failed. Check Jenkins logs for details."
        }
    }
}
