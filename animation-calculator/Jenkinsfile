pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = "localhost:5000"
        IMAGE_NAME = "calculator-app"
        CONTAINER_NAME = "calculator-container"
        SONARQUBE = "Calculator"
    }

    stages {
        stage('Checkout Source') {
            steps {
                git 'https://github.com/Mo-nish/Calculator.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE}") {
                    withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                        bat '''
                        echo === Running SonarQube analysis ===
                        sonar-scanner ^
                          -Dsonar.projectKey=Calculator ^
                          -Dsonar.sources=. ^
                          -Dsonar.host.url=http://localhost:9000 ^
                          -Dsonar.login=%SONAR_TOKEN%
                        '''
                    }
                }
            }
        }

        stage('Quality Gate Check') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Run Tests') {
            steps {
                bat '''
                echo === Running Unit Tests ===
                pytest --maxfail=1 --disable-warnings -q
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '''
                echo === Building Docker Image ===
                docker build -t %DOCKER_REGISTRY%/%IMAGE_NAME%:latest .
                '''
            }
        }

        stage('Login to Nexus Registry') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-docker', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    bat '''
                    echo === Logging in to Nexus ===
                    docker login %DOCKER_REGISTRY% -u %USER% -p %PASS%
                    '''
                }
            }
        }

        stage('Push Image to Nexus') {
            steps {
                bat '''
                echo === Pushing Image to Nexus ===
                docker push %DOCKER_REGISTRY%/%IMAGE_NAME%:latest
                '''
            }
        }

        stage('Deploy Locally') {
            steps {
                bat '''
                echo === Deploying Container ===
                docker stop %CONTAINER_NAME% || echo "No old container"
                docker rm %CONTAINER_NAME% || echo "No old container"
                docker pull %DOCKER_REGISTRY%/%IMAGE_NAME%:latest
                docker run -d --name %CONTAINER_NAME% -p 8082:5000 %DOCKER_REGISTRY%/%IMAGE_NAME%:latest
                '''
            }
        }
    }

    post {
        success {
            echo "üöÄ Deployment Successful! Access the app at http://localhost:8082"
        }
        failure {
            echo "‚ùå Build or Deployment Failed. Check Jenkins logs."
        }
    }
}
